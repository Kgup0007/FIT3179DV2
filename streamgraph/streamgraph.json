{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "container", "height": 300,
  "data": {"url": "https://raw.githubusercontent.com/Kgup0007/FIT3179A2/main/streamgraph/Data/crime.csv"},
  "mark": "area",
  "selection": {
    "neighbourhood": {
        "type": "single",
        "fields": ["neighbourhood"],
        "on": "mouseover",
        "bind": "legend"
    }
  },
  "encoding": {
    "x": {
      "title": "year",
      "timeUnit": "yearmonth", "field": "date",
      "axis": {"domain": false, "format": "%Y", "tickSize": 0, "title": null}
    },
    "y": {
      "aggregate": "sum", "field": "count",
      "axis": null,
      "stack": "center"
    },
    "color": {
      "field":"neighbourhood", 
      "scale":{"scheme": "category20"}
    },
    "opacity": {
      "condition": {"selection": "neighbourhood", "value": 1},
      "value": 0.15
    },
    "tooltip": [
        {"field": "date", "timeUnit": "year", "title": "Year"},
        {"field": "count", "aggregate": "sum", "type": "quantitative", "title": "Count"}
    ]
  }
}
